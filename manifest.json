{
  "manifest_version": 3,
  "name": "Infinite Loop | By Yogatama",
  "version": "1.0",
  "description": "Loop YouTube videos infinitely with a single click.",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}